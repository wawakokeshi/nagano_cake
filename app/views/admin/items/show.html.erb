<div class="container">
 <div class="row">
  
   <div class="col-sm-2 mt-3">
   <table class = "table-sm table-borderless">
    <thead>
     <th class="table-active h5">商品詳細</th>
    </thead>
   </table>
  </div>
 </div>
 
 <div class="row">
  <div class="col-sm-5 mt-3">
    <% if @item.image.attached? %>
     <%= image_tag @item.image, size: "400x300" %>
    <% else %>
     <%= image_tag 'no_image', size: "400x300" %>
    <% end %>
  </div>
  <div class="col-sm-4 mt-3">
   <table class="table table-borderless">
    <tbody>
     <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
     </tr>
     <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
     </tr>
     <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
     </tr>
     <tr>
      <td>税込価格<br>(税抜価格)</td>
      <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
     </tr>
     <tr>
      <td>販売ステータス</td>
      <td><%= @item.is_active_i18n %></td>
     </tr>
      <td></td>
      <td><%= link_to "編集する", edit_admin_item_path, class: "btn btn-success btn-lg mt-2 mb-2" %></td>
     </tr>
    </tbody>
   </table>
  </div> 
 </div>
</div>
