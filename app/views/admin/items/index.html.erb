<div class="container">
 <div class="row">
  <div class="col-sm-2 mt-3">
   <table class ="table-sm table-borderless">
    <thead>
     <th class="table-active h5">商品一覧</th>
    </thead>
   </table>
  </div>
  <div class="col-sm-8 mt-3"></div>
  <div class="col-sm-2 mt-3">
   <button class = "btn-white.rounded-circle.p-0"><%= link_to "新規登録", new_admin_item_path %></button>
  </div>
 </div>

 <div class="row">
  <div class="col-sm-12 mt-3"></div>
    <table class = "table table-borderless">
     <thead class = "thead-light">
      <tr>
       <th>商品ID</th>
       <th>商品名</th>
       <th>税抜価格</th>
       <th>ジャンル</th>
       <th>ステータス</th>
      </tr>
     </thead>

     <tbody>
      <% @items.each do |item| %>
      <tr>
       <td><%= item.id %></td>
       <td><%= link_to item.name, admin_item_path(item.id) %></td>
       <td><%= item.price.to_s(:delimited) %></td>
       <td><%= item.genre.name %></td>
       <td><%= item.is_active_i18n %></td>
      </tr>
      <% end %>
     </tbody>
    </table>
  </div>
 </div>
 
 <div class="row">
  <div class="col-sm-12 mt-3">
   <div class="d-flex justify-content-center">
    <%= paginate @items %>
   </div>
  </div>
 </div>
</div>