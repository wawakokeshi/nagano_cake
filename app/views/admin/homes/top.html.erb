<div class="container">
 <div class="row">
  <div class="col-sm-12 mt-3">
   <span class = "h5 text-dark">注文履歴一覧</span>
  </div>
 </div>
 
 <div class="row">
  <div class="col-sm-12 mt-3">
   <table class = "table table-borderless">
    <thead class = "thead-light">
     <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
     </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
      <tr>
       <td><%= order.created_at %></td>
       <td><%= order.address %></td>
       <td><%= order.name %></td>
       <td><%= order.price %></td>
       <td>ステータス（保留）</td>
      </tr>
      <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>