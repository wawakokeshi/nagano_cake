<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
   
   <h2>注文履歴一覧</h2>
    <table>
     <thead>
      <tr>
       <th>購入日時</th>
       <th>購入者</th>
       <th>注文個数</th>
       <th>注文ステータス</th>
      </tr>
     </thead>

     <tbody>
      <% @orders.each do |order| %>
      <tr>
       <td><%= order.created_at %></td>
       <td><%= order.address %></td>
       <td><%= order.name %></td>
       <td><%= order.price %></td>
       <td>ステータス（保留）</td>
      </tr>
      <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>