<div class="container">
 <div class="row">
  <div class="col-sm-12 mt-3">
   <span class = "h5 text-dark">ジャンル編集</span>
  </div>
 </div>

<%= form_with model: @genre, url: admin_genre_path(@genre), local: true do |f| %>
 <div class="row">
  <div class="col-sm-2 mt-5"><%= f.label :name, "ジャンル名" %></div>
  <div class="col-sm-3 mt-5"><%= f.text_field :name %></div>
  <div class="col-sm-3 mt-5"><%= f.submit "変更を保存", class: "btn btn-success btn-lg" %></div>
 </div>
<% end %>