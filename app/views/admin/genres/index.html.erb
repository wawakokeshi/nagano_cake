<h2>ジャンル一覧・追加</h2>
<p class="form">
<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
 <%= f.label :name, "ジャンル名" %>
 <%= f.text_field :name %>
 <%= f.submit "新規登録" %>
<% end %>
</p>

<p class="table">
<table>
 <thead>
  <tr>ジャンル</tr>
  <tr></tr>
 </thead>
 <tbody>
  <% @genres.each do |genre| %>
  <tr>
   <td><%= genre.name %></td>
   <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
  <tr>
  <% end %>
 </tbody>
</table>
</p>