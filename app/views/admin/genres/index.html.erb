<div class="container">
 <div class="row">
  <div class="col-sm-12 mt-3">
   <span class = "h5 text-dark">ジャンル一覧・追加</span>
  </div>
 </div>

<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
 <div class="row">
  <div class="col-sm-2 mt-5"><%= f.label :name, "ジャンル名" %></div>
  <div class="col-sm-3 mt-5"><%= f.text_field :name %></div>
  <div class="col-sm-3 mt-5"><%= f.submit "新規登録", class: "btn btn-success btn-lg" %></div>
 </div>
<% end %>

 <div class="row">
  <div class="col-sm-4 mt-5">
   <table class ="table">
    <thead class = "thead-light">
     <tr>
      <th>ジャンル</th>
      <th></th>
     </tr>
    </thead>
    <tbody>
     <% @genres.each do |genre| %>
     <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm btn-block mt-2 mb-2" %></td>
     </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>