<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, local:true do |f| %>
 <p><%= f.label :id, "会員ID"%>
    <%= @customer.id %></p>
 <p><%= f.label :last_name, "氏名" %>
    <%= f.text_field :last_name %>　<%= f.text_field :first_name %></p>
 <p><%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code %></p>
 <p><%= f.label :address, "住所" %>
    <%= f.text_field :address %></p>
 <p><%= f.label :telephone_number, "電話番号" %>
    <%= f.text_field :telephone_number %></p>
 <p><%= f.label :email, "メールアドレス" %>
    <%= f.text_field :email %></p>
 <%#= f.text_field :is_active, "会員ステータス" %>
 <%= f.submit "変更を保存"%>
<% end %>