<div class="container">
 <div class="row">
  <div class="col-sm-12 mt-3">
   <span class = "h5 text-dark"><%= @customer.full_name %>さんの会員情報編集</span>
  </div>
 </div>

 <div class="row">
  <div class="col-sm-7 mt-3">
   <table class="table table-borderless">
    <tbody>
     <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch, local:true do |f| %>
     <tr>
      <td><%= f.label :id, "会員ID"%></td>
      <td><%= @customer.id %></td>
     </tr>
     <tr>
      <td><%= f.label :last_name, "氏名" %></td>
      <td><%= f.text_field :last_name %></td>
      <td><%= f.text_field :first_name %></td>
     </tr>
     <tr>
      <td><%= f.label :last_name_kana, "フリガナ" %></td>
      <td><%= f.text_field :last_name_kana %></td>
      <td><%= f.text_field :first_name_kana %></td>
     </tr>
     <tr>
      <td><%= f.label :postal_code, "郵便番号" %></td>
      <td><%= f.text_field :postal_code %></td>
     </tr>
     <tr>
      <td><%= f.label :address, "住所" %></td>
      <td><%= f.text_field :address %></td>
     </tr>
     <tr>
      <td><%= f.label :telephone_number, "電話番号" %></td>
      <td><%= f.text_field :telephone_number %></td>
     </tr>
     <tr>
      <td><%= f.label :email, "メールアドレス" %></td>
      <td><%= f.text_field :email %></td>
     </tr>
     <tr>
      <td><%= f.label :is_active, "会員ステータス" %></td>
      <td>
       <%= f.radio_button :is_active, Customer.is_actives.key(true) %>
       <%= f.label :is_active, Customer.is_actives_i18n[:stay] %>
       <%= f.radio_button :is_active, Customer.is_actives.key(false) %>
       <%= f.label :is_active, Customer.is_actives_i18n[:withdrawal] %>
   　　</td>
     </tr>
     <tr>
      <td></td>
      <td><%= f.submit "変更を保存", class: "btn btn-success btn-lg mb-2" %></td>
     </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>