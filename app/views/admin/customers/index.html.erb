<h2>会員一覧</h2>
<table>
 <thead>
  <tr>
   <td>会員ID</td>
   <td>氏名</td>
   <td>メールアドレス</td>
   <td>ステータス</td>
  </tr>   
 </thead>
 <tbody>
  <% @customers.each do |customer| %>
  <tr>
   <td><%= customer.id %></td>
   <td><%= customer.last_name %><%= customer.first_name %></td>
   <td><%= customer.email %></td>
   <td><%= customer.is_active %></td>
  </tr>
  <% end %>
 </tbody>
</table>

