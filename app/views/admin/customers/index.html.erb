<div class="container">
 <div class="row"> 
  <div class="col-sm-2 mt-3">
   <table class = "table-sm table-borderless">
    <thead>
     <th class="table-active h5">会員一覧</th>
    </thead>
   </table>
  </div>
 </div>
 
 <div class="row">
  <div class="col-sm-12 mt-3">
   <table class = "table">
    <thead class = "thead-light">
     <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
     </tr>   
    </thead>
    <tbody>
     <% @customers.each do |customer| %>
     <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
      <td><%= customer.email %></td>
      <td><%= customer.is_active %></td>
     </tr>
     <% end %>
    </tbody>
   </table>

<%= paginate @customers %>