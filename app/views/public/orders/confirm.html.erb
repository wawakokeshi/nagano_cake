<div class="container">
 <div class="row">
  <div class="col-sm-12 mt-3">
   <table class = "table-sm table-borderless">
    <thead>
     <th class="table-active h5">注文情報確認</th>
     </thead>
   </table>
  </div>
 </div>

 <div class="row">
  <div class="col-sm-8 mt-3">
   <table class ="table table-bordered">
    <tr>
     <td>商品名</td>
     <td>単価(税込)</td>
     <td>数量</td>
     <td>小計</td>
    </tr>
    <% @cart_items.each do |cart_item| %>
    <% @total = 0 %>
    <tr>
     <td><%= cart_item.item.name %></td>
     <td><%= cart_item.item.with_tax_price %></td>
     <td><%= cart_item.amount %></td>
     <td><%= cart_item.subtotal %></td>
    </tr>
    <% end %>
   </table>
  </div>
  <div class = "col-sm-4">
   <table class ="table table-bordered">
    <tr>
     <td>送料</td>
     <td><%= @order.postage %></td>
    </tr>
    <tr>
     <td>商品合計</td>
     <td><%= @order.billing_amount %></td>
    </tr>
    <tr>
     <td>請求金額</td>
     <td><%= @total %></td>
    </tr>
   </table>
  </div>
 </div>

 <div class = "row">
  <div class = "col-sm-2 mt-5"><b>支払方法</b></div>
  <div class = "col-sm-6 mt-5"><%= @order.payment_method %></div>
 </div>

 <div class = "row">
  <div class = "col-sm-2 mt-5"><b>お届け先</b></div>
  <div class = "col-sm-6 mt-5"><%= @order.address %></div>
 </div>

 <div class = "row">
  <div class = "col-sm-2 mt-5 d-flex justify-content-center">
   <%= link_to "注文を確定する", orders_path, method: :post, class: "btn btn-primary btn-sm mt-2 mb-2" %>
   </div>
 </div>

</div>