<div class="container">
 <div class="row">
  <div class="col-sm-12 mt-3">
   <table class = "table-sm table-borderless">
    <thead>
     <th class="table-active h5">注文情報確認</th>
     </thead>
   </table>
  </div>
 </div>
 
 <div class="row">
  <div class="col-sm-8 mt-3">
   <table class ="table table-bordered">
    <tr>
     <td>商品名</td>
     <td>単価(税込)</td>
     <td>数量</td>
     <td>小計</td>
    </tr>
    <%= @cart_items.each do |cart_items| %>
    <tr>
     <td><%= cart_items.name %></td>
     <td><%= cart_items.with_tax_??? %></td>
     <td><%= cart_items.amount %></td>
     <td><%#= cart_items.??? %></td>
    </tr>
   </table>
  </div>
  <div class = "col-sm-4">
   <table class ="table table-bordered">
    <tr>
     <td>送料</td>
     <td><%= @orders.postage %></td>
    </tr>
    <tr>
     <td>商品合計</td>
     <td><%= @orders.billing_amount %></td>
    </tr>
    <tr>
     <td>請求金額</td>
     <td><%#= @orders.billing_amount %></td>
    </tr>
   </table>
  </div>
 </div>
  
 <div class = "row">
  <div class = "col-sm-2 mt-5"><b>支払方法</b></div>
  <div class = "col-sm-6 mt-5"><%= cart_items.payment_method %></div>
 </div>

 <div class = "row">
  <div class = "col-sm-2 mt-5"><b>お届け先</b></div>
  <div class = "col-sm-6 mt-5"><%= cart_items.payment_method %></div>
 </div>


 <div class = "row">
  <div class = "col-sm-2 mt-5 justfy-content-center"><%#= link_to "注文を確定する", class: "btn btn-primary btn-sm mt-2 mb-2" %></div>
 </div>

</div>