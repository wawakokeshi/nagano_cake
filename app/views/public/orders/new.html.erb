<div class="container">

 <div class="row">
  <div class="col-sm-6 mt-3">
   <table class = "table-sm table-borderless">
    <thead>
     <th class="table-active h5">注文情報入力</th>
    </thead>
   </table>
  </div>
 </div>

 <%= form_with model: @order, local:true do |f| %>
 <div class="row">
  <div class="col-sm-2 mt-3 h4">
   <b>支払方法</b>
  </div>
 </div>
 <div class="row">
  <div class="col-sm-2">
   <%= f.radio_button :payment_method, :クレジットカード %>
   <%= f.label "クレジットカード" %>
  </div>
 </div>
 <div class="row">
  <div class="col-sm-2">
   <%= f.radio_button :payment_method, :銀行振込 %>
   <%= f.label "銀行振込" %>
  </div>
 </div>

 <div class="row">
  <div class="col-sm-2 mt-3 h4">
   <b>お届け先</b>
  </div>
 </div>
 <div class="row">
  <div class="col-sm-2">
  <%= f.radio_button :address, :クレジットカード %>
  <%= f.label "ご自身の住所" %>
  </div>
 </div>
 <div class="row">
  <div class="col-sm-4">
  <%= f.radio_button :address, :銀行振込 %>
  <%= f.label "登録済住所から選択" %>
  </div>
 </div>
 <div class="row">
  <div class="col-sm-4">
  <%= f.radio_button :address, :銀行振込 %>
  <%= f.label "登録済住所から選択" %>
  </div>
 </div>
 <div class="row">
  <div class="col-sm-4">
  <%= f.radio_button :address, :銀行振込 %>
  <%= f.label "新しいお届け先" %>
  </div>
 </div>
 <div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-3"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></div>
  <div class="col-sm-3"><%= f.text_field :postal_code, class: "form-control" %></div>
 </div>
 <div class="row mt-3">
  <div class="col-sm-1"></div>
  <div class="col-sm-3"><%= f.label :address, "住所" %></div>
  <div class="col-sm-8"><%= f.text_field :address, class: "form-control" %></div>
 </div>
 <div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-3"><%#= f.label :, "宛名" %></div>
  <div class="col-sm-3"><%#= f.text_field :postal_code, class: "form-control" %></div>
 </div>
 <% end %>


<%#= link_to "確認画面へ進む", class: "btn btn-success btn-sm mt-2 mb-2" %>

</div>