<div class="container">
 <div class="row">
  <div class="col-sm-12 mt-3">
   <table class = "table-sm table-borderless">
    <thead>
     <th class="table-active h5">注文履歴一覧</th>
    </thead>
   </table>
  </div>
 </div>
 
<div class="row">
  <div class="col-sm-12 mt-3">
   <table class="table table-bordered">
    <thead>
     <tr>
      <th class="table-active">注文日</th>
      <th class="table-active">配送先</th>
      <th class="table-active">注文商品</th>
      <th class="table-active">支払金額</th>
      <th class="table-active">ステータス</th>
      <th class="table-active">注文詳細</th>
     </tr>
    </thead>
    <tbody>
     <tr>
      <% @orders.each do |order| %>
      <td><%= order.created_at %></td>
      <td><%= order.address %></td>
      <td><%= order.name %></td>
      <td><%= order.price %></td>
      <td>ステータス（保留）</td>
      <td><%= link_to "表示する", order_path(@order.id), class: "btn btn-primary btn-sm mt-2 mb-2" %></td>
      <% end %>
     </tr>
    </tbody>
   </table>
  </div>
 </div>
</div>