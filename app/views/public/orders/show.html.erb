<div class="container">

 <div class="row">
  <div class="col-sm-12 mt-3">
   <span class = "table-active h4">注文履歴詳細</span>
  </div>
 </div>

 <div class="row">
  <div class="col-sm-8 mt-3">
   <b>注文情報</b><br>
    <table class="table table-bordered">
     <tbody>
     <tr>
      <td class ="table-active">注文日</td>
      <td><%= @order.created_at %></td>
     </tr>
     <tr>
      <td class ="table-active">配送先</td>
      <td><%= @order.address %></td>
     </tr>
     <tr>
      <td class ="table-active">支払方法</td>
      <td><%= @order.payment_method %></td>
     </tr>
     <tr>
      <td class ="table-active">ステータス</td>
      <td><%#= @order.is_active %></td>
     </tr>
    </tbody>
   </table>
  </div>
  <div class="col-sm-4 mt-3">
   <b>請求情報</b><br>
    <table class ="table table-bordered">
     <tbody>
      <tr>
       <td class ="table-active">商品合計</td>
       <td><%= number_to_currency(@order.billing_amount -= @order.postage, strip_insignificant_zeros: true) %></td>
      </tr>
      <tr>
       <td class ="table-active">配送料</td>
       <td><%= @order.postage %></td>
      </tr>
      <tr>
       <td class ="table-active"><b>ご請求額</b></td>
       <td><%= number_to_currency(@order.billing_amount += @order.postage, strip_insignificant_zeros: true) %></td>
      </tr>
     </tbody>
    </table>
  </div>
 </div>

 <div class="row">
  <div class="col-sm-8 mt-3">
   <b>注文内容</b><br>
    <table class ="table table-bordered">
     <thead>
      <tr>
       <td class ="table-active">商品</td>
       <td class ="table-active">単価(税込)</td>
       <td class ="table-active">個数</td>
       <td class ="table-active">小計</td>
      </tr>
     </thead>
     <tbody>
       <tr>
       <td><%= @order_detail.item.name %></td>
       <td><%= number_to_currency(@order_detail.price, strip_insignificant_zeros: true) %></td>
       <td><%= @order_detail.amount %></td>
       <td><%= number_to_currency(@order_detail.price, strip_insignificant_zeros: true) %></td>
      </tr>

     </tbody>
    </table>
   </div>
  </div>

 </div>