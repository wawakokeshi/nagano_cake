<div class="container">
 <div class="row">
  <div class="col-sm-4 mt-3">
   <table class = "table-sm table-borderless">
    <thead>
     <th class="table-active h4">配送先編集</th>
    </thead>
   </table>
  </div>
 </div>

<%= form_with model: @address, url: address_path(@address.id), local: true do |f| %>
 <div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-3"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></div>
  <div class="col-sm-3"><%= f.text_field :postal_code, class: "form-control" %></div>
 </div>
 <div class="row mt-3">
  <div class="col-sm-1"></div>
  <div class="col-sm-3"><%= f.label :address, "住所" %></div>
  <div class="col-sm-6"><%= f.text_field :address, class: "form-control" %></div>
 </div>
 <div class="row mt-3">
  <div class="col-sm-1"></div>
  <div class="col-sm-3"><%= f.label :name, "宛名" %></div>
  <div class="col-sm-3"><%= f.text_field :name, class: "form-control" %></div>
  <div class="col-sm-2"></div>
  <div class="col-sm-3"><%= f.submit "変更内容を保存", class: "btn btn-success btn-sm mt-2 mb-2" %></div>
 </div>
 <% end %>
</div>