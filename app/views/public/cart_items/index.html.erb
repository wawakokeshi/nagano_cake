<div class="container">
 <div class="row">
  <div class="col-sm-3 mt-3">
   <table class = "table-sm table-borderless">
    <thead>
     <th class="table-active h5">ショッピングカート</th>
    </thead>
   </table>
  </div>
 </div>
 
 <div class="row">
  <div class="col-sm-12 mt-3">
   <table class="table table-bordered">
    <thead>
     <tr>
      <th class="table-active">商品名</th>
      <th class="table-active">単価(税込)</th>
      <th class="table-active">数量</th>
      <th class="table-active">小計</th>
     </tr>
    </thead>
    <% @cart_items.each do |cart_item| %>
    <tbody>
     <tr>
      <td><%= cart_item.name %></td>
      <td><%= cart_item.price %></td>
      <td><%= cart_item.amount %></td>
      <td><%#= cart_item.小計 %></td>
     </tr>
   </tbody>
   <% end %>
  </table>
  
 <div class="row">
  <div class="col-sm-3 mt-5">
   <%= link_to "買い物を続ける", items_path, class: "btn btn-success btn-sm mt-2 mb-2" %>
  </div>
  <div class="col-sm-4 mt-5"></div>
  <div class="col-sm-3 mt-5">
   <table class="table table-bordered">
    <tbody>
     <tr>
      <th class="table-active">合計金額</th>
      <th>？？？</th>
     </tr>
    </tbody>
   </table>
   </div>
  </div>
   
 <div class="row">
  <div class="col-sm-12 mt-5">
   <%= link_to "情報入力に進む", new_order_path, class: "btn btn-primary btn-sm mt-2 mb-2" %>
  </div>
 </div>
 
</div>