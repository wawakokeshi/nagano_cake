<h2>新規会員登録</h2>

<%= form_with model: @customers, url: new_customer_registration_path, local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <table>
   <tbody>
    <tr>
     <td>名前</td>
     <td>
      <div class="field">
       <%= f.label :last_name, "(姓)" %>
       <%= f.text_field :last_name, autofocus: true %>
       <%= f.label :first_name, "(名)" %>
       <%= f.text_field :first_name, autofocus: true %>
      </div>
     </td>
    </tr>
    <tr>
     <td>フリガナ</td>
     <td>
      <div class="field">
       <%= f.label :last_name_kana, "(セイ)" %>
       <%= f.text_field :last_name_kana, autofocus: true %>
       <%= f.label :first_name_kana, "(メイ)" %>
       <%= f.text_field :first_name_kana, autofocus: true %>
      </div>
     </td>
    </tr>
    <tr>
     <td>メールアドレス</td>
     <td>
      <div class="field">
       <%= f.label :email %><br>
       <%= f.email_field :email, autofocus: true %>
      </div>
     </td>
    </tr>
    <tr>
     <td>郵便番号(ハイフンなし)</td>
     <td>
      <div class="field">
       <%= f.label :postal_code %><br>
       <%= f.email_field :postal_code, autofocus: true %>
      </div>
     </td>
    </tr>
    <tr>
     <td>住所</td>
     <td>
      <div class="field">
       <%= f.label :address %><br>
       <%= f.email_field :address, autofocus: true %>
      </div>
     </td>
    </tr>
    <tr>
     <td>電話番号(ハイフンなし)</td>
     <td>
      <div class="field">
       <%= f.label :telephone_number %><br>
       <%= f.email_field :telephone_number, autofocus: true %>
      </div>
     </td>
    </tr>
    <tr>  
     <td>パスワード(６文字以上)</td>
     <td>
      <div class="field">
       <%= f.label :password %>
       <% if @minimum_password_length %>
       <em>(<%= @minimum_password_length %> characters minimum)</em>
       <% end %><br>
       <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
     </td>
    </tr>
    <tr>
     <td>パスワード(確認用)</td>
     <td>
      <div class="field">
       <%= f.label :password_confirmation %><br>
       <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
     </td>
    </tr>
   </tbody>
  </table>
  

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>



<h5>既に登録済みの方</h5>
<div class="field">
  <%= render "public/shared/links" %>からログインしてください。
</div>