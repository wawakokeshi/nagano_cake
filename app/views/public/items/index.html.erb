<div class="container">
 <div class="row">
  <div class="col-sm-2 mt-3">
   <%= render 'admin/genres/genre', genre: @genre %>
  </div>
  <div class="col-sm-10 mt-3">
   <span class = "h2">商品一覧</span>(全<%= @items.count %>件)
  <br>
  <br>
  <table class ="table table-borderless">
   <tr class ="d-flex flex-wrap justify-content-around">
    <% @items.each do |item| %>
    <td>
    <% if item.image.attached? %>
     <%= image_tag item.image, size: "200x100" %>
    <% else %>
     <%= image_tag 'no_image', size: "200x100" %>
    <% end %>
    <br>
    <%= link_to item.name, item_path(item.id) %>
    <br>
    ￥<%= item.with_tax_price.to_s(:delimited) %>
    </td>
    <% end %>
   </tr>
  </table>
  </div>
 </div>
 <div class="row">
  <div class="col-sm-12 mt-3">
   <div class="d-flex justify-content-center">
   <%= paginate @items %>
   </div>
  </div>
 </div>
</div>