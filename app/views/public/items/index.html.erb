<div class="container">
 <div class="row">
  <div class="col-sm-3 mt-3"></div>
  <div class="col-sm-9 mt-3">
   <span class = "h2">商品一覧</span>(全??件)
  </div>
 </div>


 <div class="row">
  <div class="col-sm-3 mt-3"></div>
  <div class="col-sm-9 mt-3">
  <% @items.each do |item| %>
   <% if item.image.attached? %>
    <%= image_tag item.image, size: "100x100" %>
   <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
   <% end %><br>
  <%= link_to item.name, item_path(item.id) %><br>
  <%= item.price %>
  <% end %>
  </div>
 </div>
<%#= paginate @items %>
</div>